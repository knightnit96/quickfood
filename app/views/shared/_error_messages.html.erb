<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger text-left">
      <%= t ".form_error", count: object.errors.size %>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
