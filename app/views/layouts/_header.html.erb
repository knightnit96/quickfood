<!-- Header ================================================== -->
<header>
  <div class="container-fluid">
    <div class="row">
      <div class="col--md-4 col-sm-4 col-xs-4">
        <a href="/" id="logo">
          <img src="/assets/img/logo.png" width="190" height="23" alt="" data-retina="true" class="hidden-xs">
          <img src="/assets/img/logo_mobile.png" width="59" height="23" alt="" data-retina="true" class="hidden-lg hidden-md hidden-sm">
        </a>
      </div>
      <nav class="col--md-8 col-sm-8 col-xs-8">
        <a class="cmn-toggle-switch cmn-toggle-switch__htx open_close" href="javascript:void(0);"><span>Menu mobile</span></a>
        <div class="main-menu">
          <div id="header_menu">
            <img src="/assets/img/logo.png" width="190" height="23" alt="" data-retina="true">
          </div>
          <a href="#" class="open_close" id="close_in"><i class="icon_close"></i></a>
          <ul>
            <% if !user_signed_in? %>
              <li><a href data-toggle="modal" data-target="#login_2"><%= t ".login" %></a></li>
              <li><a href data-toggle="modal" data-target="#register"><%= t ".register" %></a></li>
            <% end %>
            <% if user_signed_in? %>
              <li class="submenu">
                <% if current_user.admin? %>
                  <%= link_to "Admin", admin_path, class: "show-submenu" %>
                <% end %>
              </li>
              <li class="submenu">
                <a href="javascript:void(0);" class="show-submenu"><%= current_user.name %><i class="icon-down-open-mini"></i></a>
                <ul>
                  <% @shipper = Shipper.find_by user_id: current_user.id %>
                  <% if @shipper.blank? %>
                   <li><%= link_to t(".register_shipper"), new_shipper_path, class: "nav-link" %></li>
                  <% end %>
                  <li><%= link_to t(".create_place"), new_place_path, class: "nav-link" %></li>
                  <li><%= link_to t(".manage_your_account"), profiles_path, class: "nav-link" %></li>
                  <li><%= link_to t(".logout"), destroy_user_session_path, method: :delete, class: "nav-link" %></li>
                </ul>
              </li>
            <% end %>
            <li class="submenu">
              <a href="javascript:void(0);" class="show-submenu">
                <% if @province.present? %>
                  <%= @province.name %>
                <% else %>
                  <%= @provinces.first.name %>
                <% end %>
                <i class="icon-down-open-mini"></i>
              </a>
              <ul class="custom_ul_list">
                <% @provinces.each do |province| %>
                  <% @list_provinces_child1 = Province.parent_only(province.id).pluck(:id) %>
                  <% place = Place.is_activated_and_not_proposal.by_province(@list_provinces_child1).count %>
                  <li><%= link_to province.name+" ("+place.to_s+" địa điểm)", home_path(province: province.key_name) %></li>
                <% end %>
              </ul>
            </li>
            <li class="submenu">
              <% if @province.present? %>
                <%= link_to "Danh sách địa điểm", list_path(province: to_slug_province(@province.name)), class: "show-submenu" %>
              <% else %>
                <%= link_to "Danh sách địa điểm", list_path(province: to_slug_province(@provinces.first.name)), class: "show-submenu" %>
              <% end %>
            </li>
            <li class="submenu">
              <a href="javascript:void(0);" class="show-submenu"><%= t ".language" %><i class="icon-down-open-mini"></i></a>
              <ul>
                <li><%= link_to t(".vietnamese"), locale:"vi" %></li>
                <li><%= link_to t(".english"), locale:"en" %></li>
              </ul>
            </li>
          </ul>
        </div><!-- End main-menu -->
      </nav>
    </div><!-- End row -->
  </div><!-- End container -->
</header>
<!-- End Header =============================================== -->
