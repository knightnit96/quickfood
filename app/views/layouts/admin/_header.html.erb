<!-- Navbar -->
<nav class="main-header navbar navbar-expand navbar-white navbar-light">
  <!-- Left navbar links -->
  <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
    </li>
    <li class="nav-item d-none d-sm-inline-block">
      <a href="/" class="nav-link">Trang chủ</a>
    </li>
  </ul>
  <ul class="navbar-nav ml-auto">
    <li class="nav-item dropdown">
      <a class="nav-link" data-toggle="dropdown" href="#" aria-expanded="false">
        <% if current_user&.avatar.blank? %>
          <img src="/assets/img/default-avatar.jpg" class="img-circle elevation-2" width="32px">
        <% else %>
          <%= image_tag current_user.avatar_url, class: "img-circle elevation-2", width: "32px" %>
        <% end %>
        <span class="hidden-xs">&nbsp;&nbsp;<%= current_user.name %></span>
      </a>

      <ul class="dropdown-menu">
        <!-- User image -->
        <li style="text-align: center;">
          <% if current_user&.avatar.blank? %>
            <img src="/assets/img/default-avatar.jpg" class="img-circle elevation-2" width="150px">
          <% else %>
            <%= image_tag current_user.avatar_url, class: "img-circle elevation-2", width: "150px" %>
          <% end %>
          <p>
            <%= current_user.name %>
            <small><%= current_user.email %></small>
          </p>
        </li>
        <hr>
        <li style="text-align: center;">
          <%= link_to profile_path, class: "btn btn-default btn-flat" do %>
            <i class="nav-icon fas fa-id-card"></i> Hồ sơ
          <% end %>
          <%= link_to destroy_user_session_path, method: :delete, class: "btn btn-default btn-flat" do %>
            <i class="nav-icon fas fa-sign-out-alt"></i> Đăng xuất
          <% end %>
        </li>
      </ul>
    </li>
  </ul>
</nav>
<!-- /.navbar -->
