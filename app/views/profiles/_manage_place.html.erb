    <h4 class="panel-title">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#profile_manage_place" href="#place_menu_add"><%= t ".place_menu_add" %><i class="indicator icon_plus_alt2 pull-right"></i></a>
    </h4>
  </div>
  <div id="place_menu_add" class="panel-collapse collapse">
    <div class="panel-body">
      <%= form_tag create_menu_category_profiles_path, method: :post do %>
        <label>Danh mục thức ăn</label>
        <%= text_field_tag :name, "", class: "form-control", autocomplete: "name", placeholder: "VD. Khai vị, Món chính,..." %>
        <%= hidden_field_tag "place_id", @place.id, class: "form-control" %>
        <hr class="styled">
        <%= submit_tag "Lưu", class: "btn_1" %>
      <% end %>
    </div>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#profile_manage_place" href="#place_food_add"><%= t ".place_food_add" %><i class="indicator icon_plus_alt2 pull-right"></i></a>
    </h4>
  </div>
  <div id="place_food_add" class="panel-collapse collapse">
    <div class="panel-body">
      <%= form_tag create_menu_item_profiles_path, method: :post, id: "form_add_menu_item" do %>
        <div class="form-group">
          <label>Danh mục thức ăn</label>
          <%= select_tag "food_parent", options_from_collection_for_select(@menu_cat, "id", "name"), class: "form-control", include_blank: "Chọn danh mục" %>
        </div>
        <div class="row">
          <div class="col-sm-3">
            <div class="menu-item-pic dropzone">
              <%= file_field_tag :image %>
              <div class="dz-default dz-message"><span>Nhấn hoặc thả<br>ảnh tại đây</span>
              </div>
            </div>
          </div>
          <div class="col-sm-9">
            <div class="form-group">
              <label>Tên</label>
              <%= text_field_tag :name, "", class: "form-control", autocomplete: "name", placeholder: "VD. Cơm, mỳ, bún,..." %>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label>Giá</label>
                  <%= number_field_tag :price, "", class: "form-control", autocomplete: "price", placeholder: "VD. 9000đ" %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label>Giảm giá</label>
                  <%= number_field_tag :discount, "", class: "form-control", autocomplete: "discount", placeholder: "VD. 5000đ" %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <%= hidden_field_tag "place_id", @place.id, class: "form-control" %>
        <hr class="styled">
        <%= submit_tag "Lưu", class: "btn_1", id: "submit_add_menu_item" %>
      <% end %>
    </div>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#profile_manage_place" href="#place_food_option"><%= t ".place_food_option" %><i class="indicator icon_plus_alt2 pull-right"></i></a>
    </h4>
  </div>
  <div id="place_food_option" class="panel-collapse collapse">
    <div class="panel-body">
      <%= form_tag create_menu_option_profiles_path, method: :post do %>
        <div class="form-group">
          <label>Món</label>
          <%= select_tag "food_item_parent", options_from_collection_for_select(@menu_food, "id", "name"), class: "form-control select-box-food-option", include_blank: "Chọn món" %>
          <div class="tags" id="tags_food_option"></div>
        </div>
        <div id="input_food_option">
          <div class="form-group" id="number_1">
            <div class="row">
              <div class="col-sm-3">
                <input name="price_1" type="number" class="form-control" placeholder="VD. 5000đ">
              </div>
              <div class="col-sm-5">
                <input name="name_1" type="text" class="form-control" placeholder="VD. Thêm đường, thêm sữa,...">
              </div>
              <div class="col-sm-4 radio-input">
                <label><input type="radio" name="option_item_1" checked class="icheck" value="1">Checkbox</label>
                <label class="margin_left"><input type="radio" name="option_item_1" class="icheck" value="2">Radio</label>
                <a href="javascript:void(0)" class="nomargin remove_input_food_option" data-number="1"><i class="icon-trash"></i></a>
              </div>
            </div>
          </div>
        </div>
        <%= hidden_field_tag "list_foods", "", class: "form-control" %>
        <%= hidden_field_tag "place_id", @place.id, class: "form-control" %>
        <%= hidden_field_tag "number", 1, class: "form-control" %>
        <hr class="styled">
        <%= submit_tag "Lưu", class: "btn_1", id: "submit_add_menu_item" %>
        <%= button_tag type: "button", class: "btn_1", id: "add_input_menu_option" do %>
          <i class="icon-plus"></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

