<%= form_for @user, url: { action: "update_basic_info" } do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="row">
    <div class="col-md-4 col-sm-4">
      <div class="form-group text-right">
        <%= f.label :name %>
      </div>
    </div>
    <div class="col-md-7 col-sm-7">
      <div class="form-group">
        <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-sm-4">
      <div class="form-group text-right">
        <%= f.label :email %>
      </div>
    </div>
    <div class="col-md-7 col-sm-7">
      <div class="form-group">
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-sm-4">
      <div class="form-group text-right">
        <%= f.label :gender %>
      </div>
    </div>
    <div class="col-md-7 col-sm-7">
      <div class="form-group">
        <label>
        <input type="radio" name="user[gender]" data-check="<%= true if current_user.gender==1 %>" class="icheck radio_gender" value="1"><%= t ".male" %></label>
        <label class="margin_left">
        <input type="radio" name="user[gender]" data-check="<%= true if current_user.gender==2 %>" class="icheck radio_gender" value="2"><%= t ".female" %></label>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-sm-4"></div>
    <div class="col-md-4 col-sm-4"><button type="submit" class="btn_full_outline"><%= t ".save" %></button></div>
  </div>
<% end %>
