<tr>
  <td><%= load_page shipper_counter %></td>
  <td><%= shipper.user_name %></td>
  <td><%= shipper.province_name %></td>
  <td><%= shipper.identity_card %></td>
  <td>
    <% if shipper.status == 0 %>
      <button type="button" class="btn btn-block btn-danger btn-sm">Offline</button>
    <% elsif shipper.status == 1 %>
      <button type="button" class="btn btn-block btn-success btn-sm">Online</button>
    <% elsif shipper.status == 2 %>
      <button type="button" class="btn btn-block btn-warning btn-sm">Busy</button>
    <% end %>
  </td>
  <td>
    <label class="switch">
      <% if shipper.activated == true %>
        <input type="checkbox" id="on_off_shipper_<%= shipper.id %>" class="checkbox_active_shipper" value="0" data-id="<%= shipper.id %>" checked>
      <% else %>
        <input type="checkbox" id="on_off_shipper_<%= shipper.id %>" class="checkbox_active_shipper" value="1" data-id="<%= shipper.id %>">
      <% end %>
      <span class="slider round"></span>
    </label>
  </td>
  <td>
    <a href data-toggle="modal" data-target="#modal_detal_shipper_<%= shipper.id %>">
      <span class="fas fa-info"></span>
    </a>
    &nbsp;&nbsp;&nbsp;
    <%= link_to(admin_shipper_path(shipper), method: :delete, data: { confirm: t("javascript.are_you_sure") }) do %>
      <span class="fas fa-trash-alt"></span>
    <% end %>
  </td>
</tr>
<div class="modal fade" id="modal_detal_shipper_<%= shipper.id %>">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"><%= t ".detail_shipper" %></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
          <div class="row">
            <div class="col-lg-8">
              <div class="details_item">
                <h4><a href data-toggle="modal" data-target="#modal_detal_user_<%= shipper.id %>"><%= shipper.user_name %></a>
                </h4>
                <ul class="list">
                  <li><span><%= t ".email" %></span> : <%= shipper.user_email %></li>
                  <% if shipper.user_gender == 1 %>
                    <li><span><%= t ".gender" %></span> : male</li>
                  <% elsif shipper.user_gender == 2 %>
                    <li><span><%= t ".gender" %></span> : female</li>
                  <% end %>
                  <li><span><%= t ".province" %></span> : <%= shipper.province_name %></li>
                  <li><span><%= t ".identity_card" %></span> : <%= shipper.identity_card %></li>
                </ul>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="details_item">
                <%= image_tag shipper.user_avatar.url, class: "img-fluid" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="modal_detal_user_<%= shipper.id %>">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"><%= t ".detail_user" %></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
          <div class="row">
            <div class="col-lg-8">
              <div class="details_item">
                <h4><%= shipper.user_name %></h4>
                <ul class="list">
                  <li><span><%= t ".email" %></span> : <%= shipper.user_email %></li>
                  <% if shipper.user_gender == 1 %>
                    <li><span><%= t ".gender" %></span> : male</li>
                  <% elsif shipper.user_gender == 2 %>
                    <li><span><%= t ".gender" %></span> : female</li>
                  <% end %>
                  <li><span><%= t ".role" %></span> : <%= shipper.user_role %></li>
                </ul>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="details_item">
                <%= image_tag shipper.user_avatar.url, class: "img-fluid" %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <%= t ".address" %>
              <ul class="list">
                <% list_address(shipper.user_id).each do |address| %>
                  <li><%= address.address %>
                    <ul class="list">
                      <li><span><%= t ".common_name" %></span> : <%= address.common_name %></li>
                      <li><span><%= t ".name" %></span> : <%= address.name %></li>
                      <li><span><%= t ".phone" %></span> : <%= address.phone %></li>
                    </ul>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
